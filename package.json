{
  "name": "betasonchain-token-analyzer",
  "version": "2.0.0",
  "description": "Production-ready Solana token analyzer with real-time data, narrative correlation, and liquidity analysis - handles 1000+ concurrent users",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:restart": "pm2 restart ecosystem.config.js",
    "prod:logs": "pm2 logs betasonchain-backend",
    "prod:monit": "pm2 monit",
    "prod:delete": "pm2 delete ecosystem.config.js",
    "docker:build": "docker build -t betasonchain:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f betasonchain-backend",
    "test": "node -e \"require('./server.js')\"",
    "lint": "eslint server.js",
    "health": "curl http://localhost:3001/health | jq ."
  },
  "keywords": [
    "solana",
    "token",
    "blockchain",
    "dex-screener",
    "token-analyzer",
    "narrative-matching",
    "production-ready"
  ],
  "author": "Betasonchain",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/betasonchain.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/betasonchain/issues"
  },
  "homepage": "https://github.com/yourusername/betasonchain#readme"
}
